<div data-hook="admin_google_shopping_integration_form_fields" class="row">
  <div class="alpha four columns">
    <div data-hook="name" class="field">
      <%= label_tag nil, Spree.t(:name) %>
      <%= text_field :google_shopping_integration, :name, :class => 'fullwidth' %>
    </div>
    <div data-hook="merchant_id" class="field">
      <%= label_tag nil, Spree.t(:merchant_id) %>
      <%= text_field :google_shopping_integration, :merchant_id, :class => 'fullwidth' %>
    </div>
    <div data-hook="channel" class="field">
      <%= label_tag nil, Spree.t(:channel) %>
      <%= text_field :google_shopping_integration, :channel, :class => 'fullwidth' %>
    </div>
    <div data-hook="content_language" class="field">
      <%= label_tag nil, Spree.t(:content_language) %>
      <%= text_field :google_shopping_integration, :content_language, :class => 'fullwidth' %>
    </div>
    <div data-hook="target_country" class="field">
      <%= label_tag nil, Spree.t(:target_country) %>
      <%= text_field :google_shopping_integration, :target_country, :class => 'fullwidth' %>
    </div>
  </div>
  <div class="omega four columns">
    <div data-hook="active" class="field">
      <%= label_tag nil, Spree.t(:active) %>
      <ul>
        <li>
          <%= radio_button(:google_shopping_integration, :active, true) %>
          <%= Spree.t(:say_yes) %>
        </li>
        <li>
          <%= radio_button(:google_shopping_integration, :active, false) %>
          <%= Spree.t(:say_no) %>
        </li>
      </ul>
    </div>
  </div>
  
  <div class="clear"></div>

  <div data-hook="additional_google_shopping_integration_fields"></div>
  
</div>
